{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all"
    }
  },
  "scripts": {
    "start": "vite build && node server.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "lint-fix:code": "eslint --fix **/*.ts",
    "lint-fix:styles": "stylelint --fix ./src/**/*.{scss,css}",
    "lint-fix": "npm run lint-fix:code && npm run lint-fix:styles",
    "ts-check": "tsc --skipLibCheck --noEmit --project tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:all": "npm run lint-fix:code && npm run lint-fix:styles && npm run ts-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "sass": "^1.86.3",
    "sass-embedded": "^1.86.3",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^38.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.5",
    "vite-plugin-handlebars": "^1.5.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
